{
  "name": "plaiground",
  "version": "0.1.0",
  "description": "Immersive MCP Experimentation Studio",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "host": "tsx scripts/run-host.ts",
    "dev-host": "tsx scripts/run-host.ts",
    "monitor": "tsx scripts/monitor-server.ts",
    "start": "concurrently \"pnpm dev-host\" \"pnpm monitor\""
