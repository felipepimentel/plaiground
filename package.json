    "concurrently": "^8.2.2",
    "tsx": "^4.6.2",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "vm2": "^3.9.19"
